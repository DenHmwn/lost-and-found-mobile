generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(50)
  email    String @unique
  password String @db.VarChar(25)
  notelp   String @default("081234567890") @db.VarChar(15)
  role     Role   @default(USER)
}

model LostReport {
  id           Int          @id @default(autoincrement())
  namaBarang   String       @db.VarChar(25)
  deskripsi    String       @db.VarChar(255)
  lokasiHilang String       @db.VarChar(50)
  createdAt    DateTime     @default(now())
}

model FoundReport {
  id           Int          @id @default(autoincrement())
  namaBarang   String       @db.VarChar(25)
  deskripsi    String       @db.VarChar(255)
  lokasiTemu   String       @db.VarChar(50)
  createdAt    DateTime     @default(now())
}