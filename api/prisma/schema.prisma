generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum LostStatus {
  PENDING
  APPROVED
  REJECTED
}

enum StatusReport {
  Done
  OnProgress
  Closed
}

model User {
  id           Int           @id @default(autoincrement())
  name         String        @db.VarChar(50)
  email        String        @unique
  password     String        
  notelp       String        @unique @db.VarChar(13)
  role         Role          @default(USER)
  lostReports  LostReport[]
  foundReports FoundReport[]
}

model LostReport {
  id           Int          @id @default(autoincrement())
  namaBarang   String       @db.VarChar(25)
  deskripsi    String       @db.VarChar(255)
  lokasiHilang String       @db.VarChar(50)
  status       LostStatus   @default(PENDING)
  statusReport StatusReport @default(OnProgress)
  createdAt    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id])
  userId       Int
  
  tanggalHilang     DateTime?
  waktuHilang       String?
  foundReport  FoundReport? @relation("LostFoundRelation")
}

model FoundReport {
  id           Int          @id @default(autoincrement())
  namaBarang   String       @db.VarChar(25)
  deskripsi    String       @db.VarChar(255)
  lokasiTemu   String       @db.VarChar(50)
  statusReport StatusReport @default(OnProgress)
  createdAt    DateTime     @default(now())
  admin        User         @relation(fields: [adminId], references: [id])
  adminId      Int
  tanggalTemu     DateTime?
  waktuTemu       String?
  lostReport   LostReport?  @relation("LostFoundRelation", fields: [lostReportId], references: [id])
  lostReportId Int?         @unique
}
